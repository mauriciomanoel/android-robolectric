<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="5dp"
            cardview:cardCornerRadius="5dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:id="@+id/imageView3"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff0000"
                        android:text="VANTAGENS R$"
                        android:id="@+id/textView"
                        android:textSize="16sp"
                        android:textStyle="normal|bold"
                        android:textAlignment="textStart"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="start" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layoutCardVantagens">


                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="5dp"
            cardview:cardCornerRadius="5dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff0000"
                        android:text="DESCONTOS R$"
                        android:textSize="16sp"
                        android:textStyle="normal|bold"
                        android:textAlignment="textStart"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="start" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layoutCardDescontos">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView35" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="5dp"
            cardview:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cardViewOutros">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"

                        android:layout_gravity="center" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff0000"
                        android:text="OUTROS R$"
                        android:textSize="16sp"
                        android:textStyle="normal|bold"
                        android:textAlignment="textStart"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="start" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layoutCardOutros">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView36" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="5dp"
            cardview:cardCornerRadius="5dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"

                        android:layout_gravity="center" />
                    <TextView
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff0000"
                        android:text="TOTAL R$"
                        android:textSize="16sp"
                        android:textStyle="normal|bold"
                        android:textAlignment="textStart"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="start" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layoutCardTotal">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textView32"
            android:elevation="8dp"
            android:layout_height="10dp" />


    </LinearLayout>

</LinearLayout>